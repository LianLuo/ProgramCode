        <ul>
            <li><input id="loginuser" name="loginuser" type="text" class="loginuser" onclick="" placeholder="用户名"/></li>
            <li><input id="loginpwd" name="loginpwd" type="password" class="loginpwd"  onclick=""/></li>
            <li class="yzm">
                <span><input id="vercode" name="vercode" type="text" value="验证码" onclick=""/></span><cite><img src="" style="width: 135px;height: 46px"/></cite> 
            </li>
            <li><input name="loginbtn" id="loginbtn" type="button" class="loginbtn" value="登录"  onclick=""  /><label><input id="reminduser" name="" type="checkbox" value="" checked="checked" />记住密码</label><label><a href="#">忘记密码？</a></label></li>
