<script type="text/javascript">
    $(document).ready(function() {
        if(getCookie("remindUser") === "true") {
            $("#reminduser").prop("checked", true);
            $("#loginuser").val($.cookie("loginuser"));
            $("#loginpwd").val($.cookie("loginpwd"));
        }

        $("#loginbtn").click(function() {
            if (check()) {
                login();
            }
        });
    });

    function save() {
        if (document.getElementById("reminduser").checked) {
            var username = $("#loginuser").val();
            var password = $("#loginpwd").val();
            setCookie("remindUser", "true", 7 * 4000);
            setCookie("loginuser", username, 7 * 4000);
            setCookie("loginpwd", password, 7 * 4000);
        } else {
            setCookie("remindUser", "false", -1);
            setCookie("loginuser", "", -1);
            setCookie("loginpwd", "", -1);
        }
    };

    function check() {
        var username = $("#loginuser").val();
        var password = $("#loginpwd").val();
        var vcode = $("#vercode").val();
        if (username === "") {
            $("#loginuser").focus();
            return false;
        }

        if (password === "") {
            $("#loginpwd").focus();
            return false;
        }

        if (vcode === "") {
            $("#vercode").focus();
            return false;
        }
        return true;
    };

    function login() {
        $.ajax({
            type: 'POST',
            url: '/UserManger/Login',
            data: { username: $("#loginuser").val(), pwd: $("#loginpwd").val(), vcode: $("#vercode").val()},
            dataType: 'json',
            success:function(r) {
                if (r.success) {
                    save();
                    console.log("AAA");
                } else {
                    $("form").reset();
                }
            }
        });
    };
    function setCookie(name, val, date) {
        var exp = new Date();
        exp.setTime(exp.getTime() + date * 24 * 60 * 60 * 1000);
        document.cookie = name + "=" + escape(value) + ";expires=" + exp.toGMTString();
    }

    function getCookie(name) {
        var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
        if (arr = document.cookie.match(reg)) {
            return unescape(arr[2]);
        }
        return null;
    }
</script>
